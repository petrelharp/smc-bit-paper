  interhash = {4a2aeaf80220296f9167aff0261df581},
  intrahash = {f9d1817ccdcaa3202fa747b74b53ae47},
  journal = {bioRxiv},
  keywords = {ARG importance_sampling methods population_genetics selection_inference time_series},
  publisher = {Cold Spring Harbor Laboratory},
  timestamp = {2019-04-05T22:19:51.000+0200},
  title = {An approximate full-likelihood method for inferring selection and allele frequency trajectories from {DNA} sequence data},
