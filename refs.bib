  interhash = {2faabd646807406e58ec62a5b5c566aa},
  intrahash = {83b33df50a2c522d3da49502877feecf},
  journal = {bioRxiv},
  keywords = {ARG coalescent_theory computation methods simulation},
  publisher = {Cold Spring Harbor Labs Journals},
  timestamp = {2016-03-14T18:17:28.000+0100},
  title = {Efficient coalescent simulation and genealogical analysis for large sample sizes},
